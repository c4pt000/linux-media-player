[Desktop Entry]
_Name=Linux Media Player
_Comment=Play your media
Icon=org.xfce.linux.media.player
Exec=linux_media_player %F
Terminal=false
Type=Application
Categories=GTK;AudioVideo;Player;Video;
StartupNotify=true

Actions=Play;Previous;Next;

[Desktop Action Play]
Exec=linux_media_player --play
_Name=Play/Pause
Icon=media-playback-start-symbolic

[Desktop Action Previous]
Exec=linux_media_player --previous
_Name=Previous Track
Icon=media-skip-backward-symbolic

[Desktop Action Next]
Exec=linux_media_player --next
_Name=Next Track
Icon=media-skip-forward-symbolic
